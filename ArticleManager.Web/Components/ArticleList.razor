@inject IJSRuntime JSRuntime

<button class="btn btn-primary" @onclick="OnAdd">Add Article</button>
<table class="table mt-3">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td><button class="btn btn-warning" @onclick="e => OnEdit.InvokeAsync(item)">Edit</button></td>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.CategoryName</td>
                <td><button class="btn btn-danger" @onclick="e => OnShowDeleteModal(item)">Delete</button></td>
            </tr>

        }
    </tbody>
</table>

<div class="modal" id="deletearticlemodal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Article</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Do you want to delete this article?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" @onclick="e => OnConfirmDelete()">Yes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Article[] Items { get; set; }

    [Parameter]
    public EventCallback OnAdd { get; set; }

    [Parameter]
    public EventCallback<Article> OnEdit { get; set; }

    [Parameter]
    public EventCallback<Article> OnDelete { get; set; }

    private Article articleToDelete;

    private async Task OnShowDeleteModal(Article article)
    {
        this.articleToDelete = article;
        await JSRuntime.InvokeVoidAsync("showConfirmDelete", "deletearticlemodal");
    }

    private async Task OnConfirmDelete()
    {
        await OnDelete.InvokeAsync(this.articleToDelete);
        await JSRuntime.InvokeVoidAsync("hideConfirmDelete", "deletearticlemodal");
    }
}
